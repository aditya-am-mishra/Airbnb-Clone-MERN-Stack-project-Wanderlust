<% layout("/layouts/boilerplate") -%>

<div class="main-content d-flex flex-column justify-content-center align-items-center" style="min-height:70vh;">
  <div class="row w-100">
    <h1 class="col-6 offset-3 mb-4 text-center">Hey there! Please Log In</h1>
    <div class="col-6 offset-3 mt-2">
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn btn-success">Log In</button>
      </form>
    </div>
  </div>
</div>
